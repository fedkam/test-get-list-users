{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "standard"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "@typescript-eslint"
    ],
    "rules": {
        "indent": "off",
        "react/jsx-uses-react": "off",
        "react/react-in-jsx-scope": "off", // игнор объявление ImportReactFromReact, только для (react > v.17)
        "no-case-declarations": "off",
        "react/prop-types": "off",
        "eqeqeq":"warn",
        "camelcase":"warn"
    }
}