{
  "editor.formatOnSave": false, //off editor format
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true //on eslint format
  },
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "eslint.alwaysShowStatus": true,
  "eslint.format.enable": true,
  "eslint.lintTask.enable": true,
  "eslint.packageManager": "npm", // change to npm if you use npm
}